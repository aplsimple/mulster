########################### esp. for trimmer project ########################

IN=BEGIN
          if {[countCh  [set _ [string range $line 0 [lindex $s 0]-1]]  &quot;\&quot;&quot;] % 2 == 0} { ;# example of continued command
IN=END

OUT=BEGIN
        if {[countCh \
        [set _ [string range $line 0 [lindex $s 0]-1]] \
        &quot;\&quot;&quot;] % 2 == 0} { ;# example of continued command
OUT=END

IN=BEGIN
          puts $chano &quot;\n$line&quot;  ;# the ending &quot;;#&quot; is a comment continued  (example of continued comment)  (end of example)
IN=END

OUT=BEGIN
        puts $chano &quot;\n$line&quot;  ;# the ending &quot;;#&quot; is a comment continued \
           (example of continued comment) \
           (end of example)
OUT=END

